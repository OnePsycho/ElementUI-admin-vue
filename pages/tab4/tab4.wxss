/**index.wxss**/
page{
  background: rgba(237, 236, 236, 1);
  width: 100%;
}
.container{
  padding: 0px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background: #fff;
  height: 160px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border: 3px solid rgba(237, 236, 236, 1);
  border-radius: 70%;
}
.userinfo button{
  width: 150rpx;
  height: 150rpx;
  margin: 70rpx;
  border: 0px solid rgba(237, 236, 236, 1);
  border-radius: 50%;
  font-size: 16px;
  color: white;
  background: red;
  padding-top: 20px;
  position: static;
}

.userinfo-nickname {
  color: #000;
}

.usermotto {
  margin-top: 200px;
}
.menu_row{
  width: 100%;
  height: 80px;
  background: #fff;
  margin-top: 5px;
  display: flex;
  flex-direction: row;
}
.menu_row_item{
  width: 25%;
  height: 80px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right:  0.5px solid rgba(237, 236, 236, 0.6);
}
.menu_row_item image{
  width: 30px;
  height: 30px;
  margin-top: 15px;
  align-self: center;
}
.menu_row_item text{
  font-size: 13px;
  align-self: center;
  margin-top: 5px;
}
.menu{
  width: 100%;
  margin-top: 5px;
}
.menu_item{
  width: 100%;
  height: 50px;
  background: #fff;
  border-bottom: 0.5px solid rgba(237, 236, 236, 0.6);
   display: flex;
   flex-direction: row;
   padding: 0px 10px;
}
.menu_item text{
color: #000;
font-size: 14px;
line-height: 56px;
margin-left: 10px;
}
.menu_item_arrow{
  width: 16px;
  height: 16px;
  margin-right: 20px;
  margin-top: 17px;
 position: absolute;
 right: 10px;
}
.menu_item_icon{
    width: 20px;
  height: 20px;
  margin-top: 17px;
}