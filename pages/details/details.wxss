  border-color: #ff0000 !important;
}
.right{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.overlay_choose .kefu{
  width: 50px;
  height: 50px;
}
.overlay_choose text{
  font-size: 13px;
  margin-top: 5px;
}

.detailsImg{
