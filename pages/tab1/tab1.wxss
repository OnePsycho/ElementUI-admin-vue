page {
  background: #fff;
  width: 100%;
  font-family: "微软雅黑";

}

.container {
  padding: 0px;
  overflow: hidden;
  padding-bottom: 60px;
}

.ripple{
  animation-duration: 0.3s !important;
  -webkit-animation-duration: 0.3s !important;
}

image {
  width: 98%;
  height: 100%;
  border-radius: 10px;
  display: block;
  margin: 0px auto;
}

.section1 {
  width: 100%;
}

swiper {
  padding: 10px;
}

.section2 {
  display: flex;
  height: 84px;
  width: 100%;
  justify-content: center;
  flex-direction: row;
  padding: 0px 20px;
}

.section2 navigator {
  width: 100%;
  height: 100%;
}

.menu_item {
  width: 20%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 7% 2%;
}

.menu_item image {
  width: 100%;
  height: 100%;
}

.section3 {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 40px;
}

.header {
  width: 100%;
  height: 50px;
  margin-top: 10px;
}

.header image {
  width: 100%;
  height: 100%;
  border-radius: 0px;
}

.search_body {
  width: 100%;
  height: 50px;
  background: rgba(249, 249, 249, 0.8);
}

.searchArea {
  width: 90%;
  height: 30px;
  background: #fff;
  align-items: center;
  display: flex;
  flex-direction: row;
  margin: 10px 5%;
  border: 1px solid #ccc;
  border-radius: 30px;
}

.searchArea image {
  width: 38px;
  height: 20px;
}

.searchArea input {
  width: 90%;
  height: 30px;
  padding-left: 5px;
  font-size: 12px;
  border-radius: 10px;
  border: 0px;
}

.list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list_item {
  width: 95%;
  height: 184px;
  border-radius: 10px;
  margin: 5px 0px;
}

.list_item image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.tools {
  position: fixed;
  bottom: 43px;
  right: 40px;
  width: 45px;
  height: 45px;
  border-radius: 40px;
  z-index: 999999;
  background: rgba(255, 255, 255, 1);
  border:2px solid rgba(152, 152, 152, 0.8);
  display: flex;
  align-items: center;
}

.toolsbg{
  position: fixed;
  bottom: 40px;
  right: 30px;
  width: 135px;
  height: 47px;
  border-radius: 40px;
  z-index: 99999;
  background: rgba(255, 255, 255, 1);
  border:1px solid rgba(152, 152, 152, 0.8);
  display: flex;
  align-items: center;
}

.tools image {
  width: 20px;
  height:20px;
  display: flex;
  justify-content: flex-end;
}

.noborder{
  border: 0px !important;
}

.tools2 {
  position: fixed;
  bottom: 44px;
  right:80px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  z-index: 999999;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tools2 image {
  width: 22px;
  height: 22px;
}

.tools3 {
  position: fixed;
  bottom: 44px;
  right: 120px;
  width:40px;
  height: 40px;
  border-radius: 50%;
  z-index: 999999;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tools3 image {
  width: 22px;
  height: 22px;
}

.none{
  display: none;
}
.show{
  display: flex;
}
@import '../ripples.wxss'
