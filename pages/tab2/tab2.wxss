page {
  background: rgb(249, 249, 249);
  width: 100%;
  font-family: "微软雅黑";
}

.container {
  padding: 0px;
  overflow: hidden;
}

.section_menu{
  width: 100%;
  height: 50px;
  background: #fff;
  display: flex;
  white-space: nowrap; 
  overflow-x: hidden;
  flex-direction: row;
  position: fixed;
}
.menu_item{
  width: 25%;
  height: 100%;
  font-size: 14px;
  text-align: center;
  display: inline-block;
}
.border{
  width: 0.5px;
  height: 20px;
  border-left: 1px solid rgba(51, 53, 57, 0.4);
  margin-top: 15px;
}
.isChecked{
  color: #ff0000;
  font-weight: bold;
  line-height: 45px;
  border-bottom:5px solid #ff0000;
}
.normal{
  color: black;
  line-height: 50px;
  font-weight: normal;
}
.scroll_x_box{
  height: 50px;
  white-space: nowrap; 
}
.content{
  width: 100%;
  margin-top: 10px;
  display: flex;
  padding-top: 30px;
  flex-direction: column;
  background: rgb(249, 249, 249);
  padding-bottom: 50px;
}
.list_item{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-left: 5%;
  padding-top: 10px;
  padding-right: 5%;
  background: #fff;
  padding-bottom: 20px;
  margin-top: 20px;
  height: 220px;
  box-shadow:11px 10px 5px rgba(204, 204, 204, 0.4);
}
.item_title{
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 20px;
}
.title_en{
  font-size: 14px;
  color: #000;
  font-weight: 300;
  margin-left: 10px;
}
.item_image{
  width: 90%;
  height: 90%;
}
.item_image image{
  width: 100%;
  height: 90%;
}
.item_content{
  font-size: 13px;
  width: 90%;
  color: gray;
}
.noDatas{
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  margin-top: 20px;
  color: #ddd;
}
